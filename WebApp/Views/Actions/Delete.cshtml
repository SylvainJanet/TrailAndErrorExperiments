@model WebApp.Models.Action

@{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Actions</h4>
    <hr />
    <dl class="dl-horizontal">

        @*Not in a relationship*@
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        @*ManyToMany*@
        <dt>
            @Html.DisplayNameFor(model => model.People)
        </dt>
        <dd>
            @Html.DropDownListFor(model => model.People, new SelectList(Model.People.Select(o => o.Name), null, Model.People.Select(o => o.Name)), htmlAttributes: new { @class = "form-control" });
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

